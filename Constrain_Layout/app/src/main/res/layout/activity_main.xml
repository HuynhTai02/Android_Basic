<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/v_t1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_t2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@id/v_t1"
        app:layout_constraintStart_toStartOf="@id/v_t1" />

    <View
        android:id="@+id/v_t3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/v_t2"
        app:layout_constraintEnd_toStartOf="@id/v_t2" />

    <View
        android:id="@+id/v_t4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_t5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@id/v_t1"
        app:layout_constraintTop_toBottomOf="@id/v_t1" />

    <View
        android:id="@+id/v_t6"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:background="@color/teal_700"
        app:layout_constraintStart_toEndOf="@id/v_t5"
        app:layout_constraintTop_toBottomOf="@id/v_t5" />

    <View
        android:id="@+id/v_t7"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>