<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/teal_200" />

    <View
        android:id="@+id/v2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_200" />

    <View
        android:id="@+id/v3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_700" />

    <View
        android:id="@+id/v4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_700" />

    <View
        android:id="@+id/v5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="#78CBF1" />

    <View
        android:id="@+id/v6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/v1"
        android:layout_toEndOf="@+id/v1"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/v2"
        android:layout_alignEnd="@+id/v2"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/v3"
        android:layout_alignEnd="@id/v3"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/v4"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/v5"
        android:layout_centerHorizontal="true"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/v5"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/v5"
        android:background="#5EEF21" />

    <View
        android:id="@+id/v13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/v5"
        android:background="#5EEF21" />

</RelativeLayout>