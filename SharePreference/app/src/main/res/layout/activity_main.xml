<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/txt_login"
        android:textColor="@color/purple_700"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:autofillHints="phone"
        android:hint="@string/txt_phone"
        android:inputType="phone"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:autofillHints="password"
        android:hint="@string/txt_pass"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="18sp" />


    <CheckBox
        android:id="@+id/ckb_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:buttonTint="@color/purple_500"
        android:text="@string/txt_save"
        android:textColor="@color/purple_700"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:autofillHints="Content"
        android:background="@color/teal_200"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@color/purple_700"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bt_save1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="@string/txt_save_to_data_storage"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_save2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="@string/txt_save_to_external"
        android:textSize="16sp" />

</LinearLayout>